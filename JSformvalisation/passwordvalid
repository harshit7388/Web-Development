<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        function validate(){
            let p1 = document.myform.password1.value;
            let p2 = document.myform.password2.value;

            if(p1 == p2){
                window.confirm("great job, passowrds are same.")
                return true;

            }
            else {
                alert("password must be same")
                return false;

            }


        }

    </script>
</head>


<body>
    <form name="myform" onsubmit="return validate()" > 
    password1: <input type="password" name="password1" id=""> <br>
    password2: <input type="password" name="password2" id=""> <br>

    <input type="submit" name="submit" id="">
</form>
</body>
</html>
